<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".screens.addCharacter.AddCharacter">
    <EditText
        android:text="Bart Simpson"
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Character Name"
        android:inputType="text" />

    <EditText
        android:text="https://sketchok.com/images/articles/01-cartoons/001-simpsons/20/14.jpg"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_text_imageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL"
        android:inputType="textMultiLine" />



</LinearLayout>